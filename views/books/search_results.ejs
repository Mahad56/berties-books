<!DOCTYPE html>
<html>
<head>
  <title>Search Results – Bertie's Books</title>
  <link rel="stylesheet" href="/styles.css">
</head>
<body>
<div class="container">
  <h1>Bertie’s Books</h1>
  <nav>
    <a href="/">Home</a>
    <a href="/books/list">All Books</a>
    <a href="/books/add">Add Book</a>
    <a href="/books/search">Search</a>
  </nav>

  <div class="section">
    <h2>Results for "<%= term %>"</h2>

    <table class="table">
      <tr><th>ID</th><th>Title</th><th>Author</th><th>Year</th></tr>

      <% books.forEach(b => { %>
        <tr>
          <td><%= b.id %></td>
          <td><%= b.title %></td>
          <td><%= b.author %></td>
          <td><%= b.year %></td>
        </tr>
      <% }) %>
    </table>

    <div class="actions" style="margin-top:14px">
      <a class="btn" href="/books/search">New Search</a>
      <a class="btn btn-primary" href="/books/list">Back to List</a>
    </div>
  </div>
</div>
</body>
</html>
